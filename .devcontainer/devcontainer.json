{
  "name": "Parallel K-Means Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/parallel_k_means_clustering",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-docker",
        "twxs.cmake"
      ]
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "containerEnv": {
    "CMAKE_GENERATOR": "Ninja"
  },
  "postCreateCommand": "git config --global --add safe.directory /workspaces/parallel_k_means_clustering"
}
